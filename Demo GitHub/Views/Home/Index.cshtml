@model Demo_GitHub.Models.HomeViewModel

<h2>Obtener JSON de comprobante</h2>
<p>Ingrese el token de seguridad correcto y presione en "Ver JSON" al lado del comprobante de interés</p>
<br />
<div class="row">
    <div class="col-md-6">
        <h3>Token de seguridad</h3>
        <p>
            @Html.TextBox("Token", null, new { @class = "form-control" })
        </p>
    </div>
</div>

<h3>Nuevos comprobantes</h3>
<div class="table-responsive">
    <table class="table">
        <thead class="table">
            <tr>
                <th>
                    Id Cliente
                </th>
                <th>
                    Id Comprobante
                </th>
                <th>
                    Detalles
                </th>
            </tr>
        </thead>
        <tbody class="table">
            @foreach (var item in Model.JsonList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdComprobante)
                    </td>
                    <td>
                        @Html.ActionLink("Ver JSON", "GetJson", "Home", new { @idCliente = item.IdCliente, @idComprobante = item.IdComprobante }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
